<%= form_with model: image do |form| %>
  <%= image_tag image.url, alt: "Image to upload", class: "max-w-full", data: { gif: "" } %>

  <% if form.object.url.blank? %>
    <%= form.label :url, class: "py-2 block" do %>
      Image URL
      <%= form.text_field :url %>
    <% end %>
  <% else %>
    <%= form.hidden_field :url %>
  <% end %>

  <%= form.label :nsfw, class: "py-2 block" do %>
    Not safe for work
    <%= form.check_box :nsfw, checked: form.object.nsfw.present?  %>
  <% end %>

  <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
