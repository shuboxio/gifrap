<%= turbo_frame_tag "modal", target: "_top" do %>
  <%= tag.div class: (turbo_frame? ? "rounded-md border border-indigo-600 bg-white p-8 w-1/2 mx-auto" : "max-w-5xl mx-auto") do %>
    <header class="flex items-center justify-between py-4">
      <h2 class="font-bold">Image</h2>
      <%= link_to "edit",
        edit_image_path(@image),
        class: "px-4 py-2 bg-purple-200 text-purple-800 rounded-lg font-semibold hover:bg-purple-300 transition duration-300",
        data: { "turbo-frame": "modal" } %>
    </header>

    <img class="w-full rounded-xl shadow" src="<%= @image.url %>" alt="">
  <% end %>
<% end %>
