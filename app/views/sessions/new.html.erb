<%= turbo_frame_tag "sign_in", target: "_top" do %>
  <%= tag.div class: (turbo_frame? ? "rounded-md border border-indigo-600 bg-white p-8 w-1/2 mx-auto" : "max-w-5xl mx-auto") do %>
    <h1>Sign In</h1>

    <%= form_with model: @session do |f| %>
      <%= f.label :email, class: "block py-2" do %>
        Email
        <%= f.email_field :email, required: true, class: "outline outline-gray-600 outline-1" %>
      <% end %>

      <%= f.submit t('.submit') %>
    <% end %>
  <% end %>
<% end %>
